<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema">
	<xsd:element name="cluster" type="ClusterType">
		<!-- ensure all leaf items have unique names -->
		<xsd:unique name="Items">
			<xsd:selector xpath=".//item" />
			<xsd:field xpath="@name" />
		</xsd:unique>

		<!-- ensure unique names within each group -->
		<xsd:unique name="ClusterGroups">
			<xsd:selector xpath="group | item" />
			<xsd:field xpath="@name" />
		</xsd:unique>
	</xsd:element>

	<xsd:complexType name="ClusterType" mixed="false">
		<xsd:sequence minOccurs="0" maxOccurs="unbounded">
			<xsd:element name="item" type="ItemType"
					minOccurs="0" maxOccurs="unbounded" />

			<xsd:element name="group" type="GroupType"
					minOccurs="0" maxOccurs="unbounded">
				<!-- ensure unique names within each group -->
				<xsd:unique name="Groups">
					<xsd:selector xpath="group | item" />
					<xsd:field xpath="@name" />
				</xsd:unique>
			</xsd:element>
		</xsd:sequence>
	</xsd:complexType>

	<xsd:complexType name="GroupType" mixed="false">
		<xsd:complexContent>
			<xsd:extension base="ClusterType">
				<xsd:attribute name="name" type="IdentifierType" use="required" />
			</xsd:extension>
		</xsd:complexContent>
	</xsd:complexType>

	<xsd:complexType name="ItemType">
		<xsd:attribute name="name" type="IdentifierType" use="required" />
	</xsd:complexType>

	<xsd:simpleType name="IdentifierType">
		<xsd:restriction base="xsd:string">
			<xsd:pattern value="[a-zA-Z_$][a-zA-Z0-9_:$.-]*" />
		</xsd:restriction>
	</xsd:simpleType>
</xsd:schema>
